<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="12" style="-fx-padding:20;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.uts.uniapp.view.controller.LoginController">
    <Label style="-fx-font-size:18;-fx-font-weight:bold;" text="Student Login" />
    <GridPane hgap="10" prefHeight="56.0" prefWidth="586.0" vgap="10">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" minWidth="150" />
            <ColumnConstraints halignment="LEFT" hgrow="ALWAYS" />
        </columnConstraints>

        <Label prefHeight="15.0" prefWidth="56.0" text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="emailField" promptText="firstname.lastname@university.com" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label prefHeight="15.0" prefWidth="79.0" text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <PasswordField fx:id="passwordField" promptText="Starts with Uppercase + ≥5 letters + ≥3 digits" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>
    </GridPane>

    <HBox alignment="CENTER_RIGHT" spacing="10">
        <Button onAction="#onLogin" text="Login" />
        <Button onAction="#onExit" text="Exit" />
    </HBox>

    <Label fx:id="errorLabel" textFill="red" visible="false" wrapText="true" />
</VBox>
