<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="edu.uts.uniapp.view.controller.LoginController"
      spacing="12" alignment="CENTER" style="-fx-padding:20;">
    <Label text="Student Login" style="-fx-font-size:18;-fx-font-weight:bold;"/>
    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" minWidth="150"/>
            <ColumnConstraints halignment="LEFT" hgrow="ALWAYS"/>
        </columnConstraints>

        <Label text="Email:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="emailField" promptText="firstname.lastname@university.com"
                   GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Password:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <PasswordField fx:id="passwordField" promptText="Starts with Uppercase + ≥5 letters + ≥3 digits"
                       GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Login" onAction="#onLogin"/>
        <Button text="Exit" onAction="#onExit"/>
    </HBox>

    <Label fx:id="errorLabel" textFill="red" wrapText="true" visible="false"/>
</VBox>
